{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.25.0"
    }
  },
  "parameters": {
    "instanceName": {
      "type": "string",
      "metadata": {
        "description": "Unique name for this OpenClaw instance"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for deployment"
      }
    },
    "openAiModel": {
      "type": "string",
      "defaultValue": "gpt-4o-mini",
      "metadata": {
        "description": "OpenAI model to deploy"
      }
    }
  },
  "variables": {
    "vnetName": "[concat(parameters('instanceName'), '-vnet')]",
    "openAiName": "[concat(parameters('instanceName'), '-ai')]",
    "keyVaultName": "[concat('kv-', take(parameters('instanceName'), 10), '-', take(uniqueString(resourceGroup().id), 4))]",
    "acrName": "[concat('acr', parameters('instanceName'), take(uniqueString(resourceGroup().id), 4))]",
    "containerName": "[concat(parameters('instanceName'), '-agent')]",
    "tunnelToken": "[uniqueString(resourceGroup().id, parameters('instanceName'), 'tunnel')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-05-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": ["10.0.0.0/16"]
        },
        "subnets": [
          {
            "name": "container-subnet",
            "properties": {
              "addressPrefix": "10.0.1.0/24",
              "delegations": [
                {
                  "name": "containerDelegation",
                  "properties": {
                    "serviceName": "Microsoft.ContainerInstance/containerGroups"
                  }
                }
              ]
            }
          },
          {
            "name": "private-endpoints",
            "properties": {
              "addressPrefix": "10.0.2.0/24",
              "privateEndpointNetworkPolicies": "Disabled"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2023-05-01",
      "name": "[variables('openAiName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[variables('openAiName')]"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2023-05-01",
      "name": "[concat(variables('openAiName'), '/', parameters('openAiModel'))]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]"
      ],
      "sku": {
        "name": "Standard",
        "capacity": 10
      },
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "[parameters('openAiModel')]",
          "version": "2024-07-18"
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [],
        "enableRbacAuthorization": true
      }
    },
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2020-06-01",
      "name": "privatelink.openai.azure.com",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2020-06-01",
      "name": "[concat('privatelink.openai.azure.com/', variables('vnetName'), '-link')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', 'privatelink.openai.azure.com')]",
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('instanceName'), '-ai-pe')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]"
      ],
      "properties": {
        "subnet": {
          "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('vnetName')), '/subnets/private-endpoints')]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[concat(parameters('instanceName'), '-ai-connection')]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]",
              "groupIds": ["account"]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "instanceName": {
      "type": "string",
      "value": "[parameters('instanceName')]"
    },
    "openAiEndpoint": {
      "type": "string",
      "value": "[concat('https://', variables('openAiName'), '.openai.azure.com/')]"
    },
    "keyVaultUrl": {
      "type": "string",
      "value": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/')]"
    },
    "vnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
    },
    "tunnelToken": {
      "type": "string",
      "value": "[variables('tunnelToken')]"
    },
    "openclaw-tunnelConfig": {
      "type": "object",
      "value": {
        "version": "1.0",
        "instance": {
          "name": "[parameters('instanceName')]",
          "model": "[parameters('openAiModel')]"
        },
        "tunnelToken": "[variables('tunnelToken')]"
      }
    }
  }
}
